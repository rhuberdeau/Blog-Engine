<%= form_for [blog_engine, @article] do |f| %>
	<div class="field">
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<%= f.label :content %><br/>
		<%= f.text_area :content, class: "wysihtml5" %>
	</div>
	
	<div class="field">
		<%= f.label :published %>
		<%= f.check_box :published %>
	</div>
	
	<div class="actions">
	  <%= f.submit 'Save' %>
	</div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5({
			  "html": true,
			});
    });
  })
</script>