<%= form_for [blog_engine, @article] do |f| %>
	<div class="field">
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</div>
	
	<div class="field">
		<%= f.label :content %><br/>
		<%= f.text_area :content %>
	</div>
	
	<div class="field">
		<%= f.label :published %>
		<%= f.check_box :published %>
	</div>
	
	<div class="actions">
	  <%= f.submit 'Save' %>
	</div>
<% end %>